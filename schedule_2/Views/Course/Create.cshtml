@model schedule_2.Models.Course

<h2>Створити курс</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Опис</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Викладачі</label>
        <select multiple asp-items="@ViewBag.Teachers" name="selectedTeachers" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Групи</label>
        <select multiple asp-items="@ViewBag.Groups" name="selectedGroups" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>