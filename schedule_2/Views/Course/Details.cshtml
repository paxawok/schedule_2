@model schedule_2.Models.Course

<h2>Деталі курсу</h2>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Опис</dt>
        <dd>@Model.Description</dd>
        <dt>Викладачі</dt>
        <dd>
            @foreach (var teacher in Model.Teachers)
            {
                <p>@teacher.LastName @teacher.FirstName (@teacher.Email)</p>
            }
        </dd>
        <dt>Групи</dt>
        <dd>
            @foreach (var group in Model.Groups)
            {
                <p>@group.Name</p>
            }
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="get" style="display:inline;">
        <button type="submit" class="btn btn-warning">Редагувати</button>
    </form> |
    <form asp-action="Delete" method="post" style="display:inline;">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Ви впевнені?')">Видалити</button>
    </form> |
    <form asp-action="Index" method="get" style="display:inline;">
        <button type="submit" class="btn btn-secondary">Повернутися до списку</button>
    </form>
</div>