@model IEnumerable<schedule_2.Models.Course>

<h2>Список курсів</h2>
<form asp-action="Create" method="get" style="display:inline;">
    <button type="submit" class="btn btn-primary">Створити новий</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Викладачі</th>
            <th>Групи</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @foreach (var teacher in item.Teachers)
                    {
                        <span>@teacher.LastName @teacher.FirstName, </span>
                    }
                </td>
                <td>
                    @foreach (var group in item.Groups)
                    {
                        <span>@group.Name, </span>
                    }
                </td>
                <td>
                    <form asp-action="Details" asp-route-id="@item.Id" method="get" style="display:inline;">
                        <button type="submit" class="btn btn-info">Деталі</button>
                    </form> |
                    <form asp-action="Edit" asp-route-id="@item.Id" method="get" style="display:inline;">
                        <button type="submit" class="btn btn-warning">Редагувати</button>
                    </form> |
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Ви впевнені?')">Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>