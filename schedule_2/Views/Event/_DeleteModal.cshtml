@model schedule_2.Models.Event

<div class="modal-header">
    <h5 class="modal-title">Підтвердження видалення</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <p>Ви впевнені, що хочете видалити подію <strong>@Model.Title</strong>?</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
    <form asp-action="DeleteModal" method="post" id="deleteEventForm">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Видалити</button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).on('submit', '#deleteEventForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        $('#deleteModal').modal('hide');
                        location.reload(); // Оновлюємо сторінку для відображення змін
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Помилка при видаленні події.');
                }
            });
        });
    </script>
}
