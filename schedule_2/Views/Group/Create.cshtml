@model schedule_2.Models.Group

<h2>Створити групу</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Події</label>
        <select multiple asp-items="@ViewBag.Events" name="selectedEvents" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Курси</label>
        <select multiple asp-items="@ViewBag.Courses" name="selectedCourses" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>