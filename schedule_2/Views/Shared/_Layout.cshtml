<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/schedule_2.styles.css" asp-append-version="true" />

    <style>
        /* Фіксуємо футер внизу */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1; /* Розтягуємо контент на всю доступну висоту */
        }

        .footer {
            width: 100%;
            background: #f8f9fa; /* Світлий фон */
            text-align: center;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="border-bottom py-2">
        <div style="height: 70px" class="container d-flex justify-content-between align-items-center">
            <a style="font-size: 32px !important" class="navbar-brand fs-4 fw-bold text-dark" asp-area="" asp-controller="Home" asp-action="Index">Shedule</a>
            <div class="d-flex align-items-center gap-2">
                <span style="font-size: 20px; padding-right: 5px" class="fw-bold">UA</span>
                <div style="width: 34px; height: 34px; background-color: blue; border-radius: 50%;"></div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container content mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer (приклеєний до низу) -->
    <footer class="footer border-top text-muted py-3">
        <div class="container">
            &copy; 2025 - MIT-41 - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
